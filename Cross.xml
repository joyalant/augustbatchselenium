<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="CrossBrowserSuite">

    <test name="Chrome Test">
        <parameter name="Browser" value="chrometest"/>
        <classes>
            <class name="testng.CrossBrowserTest"/>
        </classes>
    </test>

    <test name=" Edge Test">
        <parameter name="Browser" value="edgetest"/>
        <classes>
            <class name="testng.CrossBrowserTest"/>
        </classes>
    </test>

    <test name="Firefox Test">
        <parameter name="Browser" value="firefoxtest"/>
        <classes>
            <class name="testng.CrossBrowserTest"/>
        </classes>
    </test>

</suite>

 